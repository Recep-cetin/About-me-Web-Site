@model KisiselBlog.Models.Kullanicilar

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Yeni kulanıcı</title>
</head>
<body>

    <h4>Yeni kulanıcı</h4>
    <hr />
    <div class="row">
        <div style="margin-left:450px;margin-top:100px">
            <div class="col-md-4">
                <form asp-action="kullaniciekle">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group" style="padding-top:30px">
                        <h3>Adi</h3>

                        <input asp-for="Adi" class="form-control" />
                        <span asp-validation-for="Adi" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="padding-top:30px">
                        <h3>Soyadi</h3>

                        <input asp-for="Soyadi" class="form-control" />
                        <span asp-validation-for="Soyadi" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="padding-top:30px">
                        <h3>Eposta</h3>

                        <input asp-for="Eposta" class="form-control" />
                        <span asp-validation-for="Eposta" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="padding-top:30px">
                        <h3>Telefon</h3>

                        <input asp-for="Telefon" class="form-control" />
                        <span asp-validation-for="Telefon" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="padding-top:30px">
                        <h3>Parola</h3>

                        <input asp-for="Parola" class="form-control" />
                        <span asp-validation-for="Parola" class="text-danger"></span>
                    </div>

                    <div class="form-group" style="padding-top:30px">
                        <input type="submit" value="Kaydet" class="btn btn-primary" />
                    </div>
                </form>
                @if (@TempData["mesaj"] != null)
                {
                    <div class="alert alert-success">
                        @TempData["mesaj"]
                    </div>
                }
            </div>
        </div>
    </div>

    <div>
        <a asp-action="Index"><h1>Ana Sayfaya</h1></a>
    </div>

</body>
</html>
